<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        style="@style/AVLoadingIndicatorView"

        app:indicatorName="BallBeatIndicator"
        app:indicatorColor="@color/colorAccent"

        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/registerlayout"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="SIGNUP"
                android:textSize="34sp"

                />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textinputlayoutname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:errorTextAppearance="@style/error_appearance">

                        <EditText
                            android:id="@+id/student_reg_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Full Name"
                            android:textColor="#000"
                            android:inputType="textPersonName"
                            android:textSize="18sp" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textinputlayoutusername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:errorTextAppearance="@style/error_appearance">

                        <Spinner
                            android:id="@+id/student_reg_branch"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textSize="18sp" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:id="@+id/input_roll"

                        app:errorTextAppearance="@style/error_appearance"
                        >

                        <EditText
                            android:id="@+id/student_reg_rollno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:hint="Roll No."
                            android:inputType="textPersonName"
                            android:textSize="18sp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:id="@+id/input_email"
                        app:errorTextAppearance="@style/error_appearance"
                        >

                        <EditText
                            android:id="@+id/student_reg_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:textSize="18sp" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:id="@+id/input_phone"
                        app:errorTextAppearance="@style/error_appearance"
                        >

                        <EditText
                            android:id="@+id/student_reg_phone"
                            android:layout_width="match_parent"
                            android:textColor="#000"

                            android:layout_height="wrap_content"
                            android:hint="Phone No."
                            android:inputType="phone"
                            android:textSize="18sp" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:id="@+id/input_address"
                        app:errorTextAppearance="@style/error_appearance"
                        >

                        <EditText
                            android:id="@+id/student_reg_address"
                            android:layout_width="match_parent"
                            android:textColor="#000"

                            android:layout_height="wrap_content"
                            android:hint="Alternate phone"
                            android:inputType="phone"
                            android:textSize="18sp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:id="@+id/input_pwd"
                        app:errorTextAppearance="@style/error_appearance"
                        >

                        <EditText
                            android:id="@+id/student_reg_passwd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Password"
                            android:textColor="#000"
                            android:inputType="textPassword"
                            android:textSize="18sp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:id="@+id/input_repwd"
                        app:errorTextAppearance="@style/error_appearance"
                        >

                        <EditText
                            android:id="@+id/student_reg_confirmpasswd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Confirm Passsword"
                            android:inputType="textPassword"
                            android:textColor="#000"
                            android:textSize="18sp" />
                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:id="@+id/student_reg"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="22dp"
                        android:background="#039be5"
                        android:text="Register"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="18sp" />
                </LinearLayout>
            </ScrollView>"
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>