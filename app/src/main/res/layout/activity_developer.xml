<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:layout_height="match_parent"
    tools:context="org.darkbyte.nithtpo.student.Developer">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20sp"
                android:paddingTop="20dp"
                android:text="App Developer"
                android:layout_gravity="center"/>
            <View
                android:layout_width="75dp"
                android:layout_gravity="center"
                android:layout_height="2dp"
                android:paddingBottom="20dp"
                android:background="#000"/>

            <com.alexzh.circleimageview.CircleImageView
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/test423"
                android:scaleType="fitXY"
                android:src="@drawable/g"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:paddingTop="15dp"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textColor="#000"
                android:text="M. Goutham Reddy"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:paddingTop="15dp"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:id="@+id/call"
                android:textColor="@android:color/holo_green_dark"
                android:text="+919882550568"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:paddingTop="15dp"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:id="@+id/linkedinprofile"
                android:textColor="@color/colorPrimaryDark"
                android:text="Linked In Profile"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    </LinearLayout>
</ScrollView>
